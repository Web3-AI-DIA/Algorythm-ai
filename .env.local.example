# This file is an example. Create a .env.local file and add your own keys.
# IMPORTANT: For client-side Firebase keys, the NEXT_PUBLIC_ prefix is required.

# Firebase Client SDK (from your Firebase project settings)
NEXT_PUBLIC_FIREBASE_API_KEY="<REPLACE_ME_WITH_YOUR_KEY>"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="<REPLACE_ME_WITH_YOUR_KEY>"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="<REPLACE_ME_WITH_YOUR_KEY>"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="<REPLACE_ME_WITH_YOUR_KEY>"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="<REPLACE_ME_WITH_YOUR_KEY>"
NEXT_PUBLIC_FIREBASE_APP_ID="<REPLACE_ME_WITH_YOUR_KEY>"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="<REPLACE_ME_WITH_YOUR_KEY>"

# Firebase Admin SDK (from the downloaded JSON service account file)
# NOTE: The private key needs to be a single line. Replace newlines with \n
FIREBASE_PROJECT_ID="<REPLACE_ME_WITH_YOUR_KEY>"
FIREBASE_CLIENT_EMAIL="<REPLACE_ME_WITH_YOUR_KEY>"
FIREBASE_PRIVATE_KEY="<REPLACE_ME_WITH_YOUR_KEY>"

# Genkit (Google AI)
GEMINI_API_KEY="<REPLACE_ME_WITH_YOUR_KEY>"

# Stripe
# The publishable key needs the NEXT_PUBLIC_ prefix
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="<REPLACE_ME_WITH_YOUR_KEY>"
STRIPE_SECRET_KEY="<REPLACE_ME_WITH_YOUR_KEY>"
STRIPE_WEBHOOK_SECRET="<REPLACE_ME_WITH_YOUR_KEY>"
NEXT_PUBLIC_STRIPE_STARTER_PACK_PRICE_ID="<REPLACE_ME_WITH_YOUR_STRIPE_PRICE_ID>"
NEXT_PUBLIC_STRIPE_PRO_PACK_PRICE_ID="<REPLACE_ME_WITH_YOUR_STRIPE_PRICE_ID>"
NEXT_PUBLIC_STRIPE_SCALE_PACK_PRICE_ID="<REPLACE_ME_WITH_YOUR_STRIPE_PRICE_ID>"
NEXT_PUBLIC_STRIPE_ENTERPRISE_PACK_PRICE_ID="<REPLACE_ME_WITH_YOUR_STRIPE_PRICE_ID>"

# NOWPayments
# These are the static payment link URLs you create in your NOWPayments dashboard
NEXT_PUBLIC_NOWPAYMENTS_STARTER_PACK_LINK="<REPLACE_ME_WITH_YOUR_NOWPAYMENTS_LINK>"
NEXT_PUBLIC_NOWPAYMENTS_PRO_PACK_LINK="<REPLACE_ME_WITH_YOUR_NOWPAYMENTS_LINK>"
NEXT_PUBLIC_NOWPAYMENTS_SCALE_PACK_LINK="<REPLACE_ME_WITH_YOUR_NOWPAYMENTS_LINK>"
NEXT_PUBLIC_NOWPAYMENTS_ENTERPRISE_PACK_LINK="<REPLACE_ME_WITH_YOUR_NOWPAYMENTS_LINK>"
# This is the IPN Secret Key from your NOWPayments account settings
NOWPAYMENTS_IPN_SECRET_KEY="<REPLACE_ME_WITH_YOUR_KEY>"


# Etherscan
ETHERSCAN_API_KEY="<REPLACE_ME_WITH_YOUR_KEY>"
