NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=<REPLACE_ME_WITH_YOUR_FIREBASE_CLIENT_MEASUREMENT_ID>

# Firebase Admin SDK (for server-side operations, found in Firebase Service Accounts)
FIREBASE_PROJECT_ID=<REPLACE_ME_WITH_YOUR_FIREBASE_ADMIN_PROJECT_ID>
